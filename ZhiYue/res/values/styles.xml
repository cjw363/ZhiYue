<resources>

    <!--dialog的进出动画效果  -->
    <style name="animat_dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- 状态栏颜色，会被statusBarColor效果覆盖 -->
        <item name="colorPrimaryDark">@color/status_cyan</item>
        <!-- 状态栏颜色，继承自colorPrimaryDark -->
        <!-- <item name="statusBarColor">@color/status_cyan</item> -->
        <!-- actionBar颜色 -->
        <item name="colorPrimary">@color/action_cyan</item>
        <!-- 背景颜色 -->
        <item name="android:windowBackground">@color/window_bg_cyan</item>
        <!-- 底部栏颜色 -->
        <!-- <item name="navigationBarColor">@color/navigation_cyan</item> -->


        <!-- ListView的分割线颜色，switch滑动区域色 -->
        <item name="android:colorForeground">@color/fg_cyan</item>
        <!-- popMenu的背景色 -->
        <!-- <item name="colorBackground">@color/bg_cyan</item> -->


        <!-- 控件默认颜色 ，效果会被colorControlActivated取代 -->
        <item name="colorAccent">@color/control_activated_cyan</item>

        <!-- 控件默认时颜色 -->
        <item name="colorControlNormal">@color/control_normal_cyan</item>
        <!-- 控件按压时颜色，会影响水波纹效果，继承自colorAccent -->
        <item name="colorControlHighlight">@color/control_highlight_cyan</item>
        <!-- 控件选中时颜色 -->
        <item name="colorControlActivated">@color/control_activated_cyan</item>
        <!-- Button的默认背景 -->
        <item name="colorButtonNormal">@color/button_normal_cyan</item>

        <!-- Button，textView的文字颜色 -->
        <item name="android:textColor">@color/black_text</item>
        <!-- RadioButton checkbox等控件的文字 -->
        <item name="android:textColorPrimaryDisableOnly">@color/black_text</item>
        <!-- actionBar的标题文字颜色 -->
        <item name="android:textColorPrimary">@color/white_text</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!--
         AppCompatActivity 里面可以指定Activity切换动画，通过分别指定进入退出的动画即可，非常简单。
    	在 StartActivity 和 finish 的时候，指定 overridependingtransition 也可以进行相应的动画
    -->
    <style name="ActivityInOutAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:activityOpenExitAnimation">@android:anim/slide_out_right</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="AppTheme.Transparent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>